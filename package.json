{
  "name": "game-tracker-backend",
  "version": "1.0.0",
  "description": "Backend for tracking game data from Steamcharts and Reddit.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "dev:test": "ts-node-dev --respawn src/types/index.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "game",
    "tracker",
    "steamcharts",
    "reddit",
    "express",
    "typescript",
    "puppeteer",
    "snoowrap",
    "zod"
  ],
  "author": "Yohannes Merga",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "puppeteer": "^24.12.0",
    "snoowrap": "^1.23.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.11",
    "@types/puppeteer": "^7.0.4",
    "@types/snoowrap": "^1.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "config": {
    "puppeteer_skip_chromium_download": "true"
  }
}
